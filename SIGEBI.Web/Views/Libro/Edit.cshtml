@model SIGEBI.Web.Models.LibroViewModel

@{
    ViewData["Title"] = "Editar libro";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Editar libro</h3>
        <span class="small text-white-50">ID: @Model.Id</span>
    </div>
    <div class="card-body">
        <p class="text-secondary">Actualiza los datos principales y la ubicación física del ejemplar.</p>

        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <partial name="_LibroForm" model="Model" />

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Ver detalle</a>
                <a asp-action="Index" class="btn btn-link">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
