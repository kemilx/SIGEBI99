@model IEnumerable<SIGEBI.Web.Models.LibroViewModel>

@{
    ViewData["Title"] = "Libros";
}

<div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between mb-4 gap-3">
    <div>
        <h1 class="h3 mb-1">Catálogo de libros</h1>
        <p class="text-secondary mb-0">Busca por título o autor y navega el listado con disponibilidad en tiempo real.</p>
    </div>
    <a class="btn btn-primary" asp-action="Create">Agregar libro</a>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row gy-2 gx-3 align-items-end">
            <div class="col-md-5">
                <label for="titulo" class="form-label fw-semibold">Título</label>
                <input type="text" name="titulo" id="titulo" value="@Context.Request.Query["titulo"]" class="form-control" placeholder="Ej. Cien años de soledad" />
            </div>
            <div class="col-md-5">
                <label for="autor" class="form-label fw-semibold">Autor</label>
                <input type="text" name="autor" id="autor" value="@Context.Request.Query["autor"]" class="form-control" placeholder="Ej. Gabriel García Márquez" />
            </div>
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </form>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info shadow-sm">Ingresa un título o autor para mostrar resultados.</div>
}
else
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Título</th>
                        <th>Autor</th>
                        <th>ISBN</th>
                        <th class="text-center">Ejemplares</th>
                        <th>Ubicación</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Titulo</td>
                            <td>@item.Autor</td>
                            <td>@item.Isbn</td>
                            <td class="text-center">
                                <span class="badge bg-primary">@item.EjemplaresTotales</span>
                                <span class="badge bg-success ms-1">@item.EjemplaresDisponibles disponibles</span>
                            </td>
                            <td>@item.Ubicacion</td>
                            <td>
                                <span class="badge bg-dark">@item.Estado</span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                                    <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
