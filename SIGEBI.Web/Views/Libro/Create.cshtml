@model SIGEBI.Web.Models.LibroViewModel

@{
    ViewData["Title"] = "Nuevo libro";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Registrar libro</h3>
    </div>
    <div class="card-body">
        <p class="text-secondary">Completa la información para agregar un nuevo título al catálogo.</p>

        <form asp-action="Create" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <partial name="_LibroForm" model="Model" />

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Volver al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
