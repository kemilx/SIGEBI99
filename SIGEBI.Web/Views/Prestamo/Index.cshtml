@model IEnumerable<SIGEBI.Web.Models.PrestamoViewModel>

@{
    ViewData["Title"] = "Préstamos";
}

<div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between mb-4 gap-3">
    <div>
        <h1 class="h3 mb-1">Préstamos por usuario</h1>
        <p class="text-secondary mb-0">Consulta el historial ingresando el identificador del usuario.</p>
    </div>
    <a class="btn btn-primary" asp-action="Create">Nuevo préstamo</a>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row gy-2 gx-3 align-items-end">
            <div class="col-md-10">
                <label for="usuarioId" class="form-label fw-semibold">Usuario (Guid)</label>
                <input type="text"
                       id="usuarioId"
                       name="usuarioId"
                       value="@ViewBag.UsuarioId"
                       class="form-control"
                       placeholder="00000000-0000-0000-0000-000000000000" />
                <small class="text-muted">Proporcione el identificador del usuario.</small>
            </div>
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </form>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info shadow-sm">No hay préstamos para mostrar. Ingrese un usuario o cree un nuevo registro.</div>
}
else
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Usuario</th>
                        <th>Libro</th>
                        <th>Estado</th>
                        <th>Fecha inicio</th>
                        <th>Fecha compromiso</th>
                        <th>Observaciones</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-break">@item.UsuarioId</td>
                            <td class="text-break">@item.LibroId</td>
                            <td>
                                <span class="badge bg-primary">@item.Estado</span>
                            </td>
                            <td>@item.FechaInicioUtc.ToString("yyyy-MM-dd")</td>
                            <td>@item.FechaFinUtc.ToString("yyyy-MM-dd")</td>
                            <td class="text-break">@item.Observaciones</td>
                            <td class="text-end">
                                <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
