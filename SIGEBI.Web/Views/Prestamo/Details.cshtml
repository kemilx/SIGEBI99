@model SIGEBI.Web.Models.PrestamoViewModel

@{
    ViewData["Title"] = "Detalle de préstamo";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Detalle de préstamo</h3>
        <span class="small text-white-50">ID: @Model.Id</span>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Usuario</dt>
            <dd class="col-sm-9 text-break">@Model.UsuarioId</dd>

            <dt class="col-sm-3">Libro</dt>
            <dd class="col-sm-9 text-break">@Model.LibroId</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                <span class="badge bg-primary">@Model.Estado</span>
            </dd>

            <dt class="col-sm-3">Fecha inicio</dt>
            <dd class="col-sm-9">@Model.FechaInicioUtc.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Fecha compromiso</dt>
            <dd class="col-sm-9">@Model.FechaFinUtc.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Observaciones</dt>
            <dd class="col-sm-9">@Model.Observaciones</dd>
        </dl>

        <div class="d-flex gap-2 mt-4">
            <a asp-action="Index" asp-route-usuarioId="@Model.UsuarioId" class="btn btn-outline-secondary">Volver al listado</a>
            <a asp-action="Create" class="btn btn-link">Registrar otro préstamo</a>
        </div>
    </div>
</div>
