@model SIGEBI.Web.Models.PrestamoViewModel

@{
    ViewData["Title"] = "Crear préstamo";
}

<h1>Crear préstamo</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" action="/Prestamo/Create">
            <div class="form-group mb-2">
                <label asp-for="LibroId" class="control-label"></label>
                <input asp-for="LibroId" class="form-control" />
                <span asp-validation-for="LibroId" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="UsuarioId" class="control-label"></label>
                <input asp-for="UsuarioId" class="form-control" />
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="FechaInicioUtc" class="control-label"></label>
                <input asp-for="FechaInicioUtc" class="form-control" />
                <span asp-validation-for="FechaInicioUtc" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="FechaFinUtc" class="control-label"></label>
                <input asp-for="FechaFinUtc" class="form-control" />
                <span asp-validation-for="FechaFinUtc" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Observaciones" class="control-label"></label>
                <textarea asp-for="Observaciones" class="form-control"></textarea>
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a href="/Prestamo/Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
