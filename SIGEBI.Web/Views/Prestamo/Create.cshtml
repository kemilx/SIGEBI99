@model SIGEBI.Web.Models.PrestamoViewModel

@{
    ViewData["Title"] = "Crear préstamo";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Registrar préstamo</h3>
    </div>
    <div class="card-body">
        <p class="text-secondary">Ingresa los datos para generar un préstamo con fechas comprometidas.</p>

        <form method="post" asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="LibroId" class="form-label fw-semibold"></label>
                    <input asp-for="LibroId" class="form-control" />
                    <span asp-validation-for="LibroId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="UsuarioId" class="form-label fw-semibold"></label>
                    <input asp-for="UsuarioId" class="form-control" />
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="FechaInicioUtc" class="form-label fw-semibold"></label>
                    <input asp-for="FechaInicioUtc" class="form-control" type="date" />
                    <span asp-validation-for="FechaInicioUtc" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="FechaFinUtc" class="form-label fw-semibold"></label>
                    <input asp-for="FechaFinUtc" class="form-control" type="date" />
                    <span asp-validation-for="FechaFinUtc" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Observaciones" class="form-label fw-semibold"></label>
                    <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
